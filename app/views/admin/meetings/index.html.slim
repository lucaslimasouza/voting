.row
  .col-lg-10
    h1 Meetings
  .col-lg-2
    h1
      =link_to 'add meeting',
        new_admin_meeting_path,
        class: 'btn btn-primary pull-right'

- @meetings.each do |meeting|
  .panel.panel-default
    .panel-heading=meeting.name
    .panel-body
      =link_to 'add job role',
        new_admin_job_role_path(meeting_id: meeting.id),
        class: 'btn btn-primary pull-right'

    table.table.table-striped
      thead
        tr
          th Job Role
          th
      tbody
        - meeting.job_roles.each do |job_role|
          tr
            td= job_role.name
            td
              =link_to 'Details',
                admin_job_role_path(job_role)
